@model TareaViewModels
@{
    ViewBag.Title = "Modificar";
}

@using (Html.BeginForm("Actualizar", "Tarea", FormMethod.Post))
{

    <!-- start: page -->
    <section class="panel">
        <div class="row">
            <div class="col-md-12">
                <div class="tabs">
                    <ul class="nav nav-tabs">
                        <li id="ClickTarea" class="active">
                            <a href="#popular" data-toggle="tab">
                                <span class="badge hidden-xs">1</span>
                                Tarea
                            </a>
                        </li>

                        <li id="ClickAcciones">
                            <a href="#Acciones" data-toggle="tab">
                                <span class="badge hidden-xs">3</span>
                                Acciones
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="popular" class="tab-pane active">
                            <form id="Frmpopular">
                                <div class="panel-body">
                                    <h2>
                                        Modificar Tarea
                                        <div class="row">
                                            <ul class="notifications" style="float:right">
                                                <li>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fa fa-save"></i>
                                                    </button>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("Index","Tarea")" class="btn btn-primary">
                                                        <i class="fa fa-mail-reply "></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </h2>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label class="control-label">Ticket</label>
                                                @Html.TextBoxFor(m => m.VIEW.ID_TAREA, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                                                @Html.HiddenFor(m => m.VIEW.ID_TAREA, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label>Fecha Generación</label>
                                                @Html.TextBoxFor(m => m.VIEW.FECHAREGISTRO, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label class="control-label">Estado</label>
                                                @Html.TextBoxFor(m => m.VIEW.DESESTADO, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label class="control-label">Tipo Ticket</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-tasks"></i>
                                                    </span>
                                                    <select name="VIEW.TIPO" class="form-control" required>
                                                        <option value="0"> Seleccione....</option>
                                                        @foreach (var item in Model.ListTipoTarea)
                                                        {
                                                            <option value="@item.CODIGO" @(item.CODIGO == Model.VIEW.TIPO.ToString() ? "selected" : "")>@item.NOMBRE</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="control-label">Solicitante</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                    <div hidden>
                                                        @Html.TextBoxFor(m => m.VIEW.ID_SOLICITANTE, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                                                    </div>
                                                    @Html.TextBoxFor(m => m.VIEW.SOLICITANTE, new { @class = "form-control", @required = "required", @redonly = "readonly", @disabled = "" })

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="control-label">Responsable</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                    <select name="VIEW.ID_RESPONSABLE" class="form-control" required>
                                                        <option value="0"> Seleccione....</option>
                                                        @foreach (var item in Model.ListRESPONSABLE)
                                                        {
                                                            <option value="@item.IDPERSONA" @(item.IDPERSONA == Model.VIEW.ID_RESPONSABLE ? "selected" : "")>@item.NOMBRECOMPLETO</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="control-label">Alterno</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                    <select name="VIEW.ID_ALTERNO" class="form-control" required>
                                                        <option value="0"> Seleccione....</option>
                                                        @foreach (var item in Model.ListALTERNO)
                                                        {
                                                            <option value="@item.IDPERSONA" @(item.IDPERSONA == Model.VIEW.ID_ALTERNO ? "selected" : "")>@item.NOMBRECOMPLETO</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label class="control-label">Involucrado</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </span>
                                                    <select name="VIEW.ID_INVOLUCRADO" class="form-control" required>
                                                        <option value="0"> Seleccione....</option>
                                                        @foreach (var item in Model.ListINVOLUCRADO)
                                                        {
                                                            <option value="@item.IDPERSONA" @(item.IDPERSONA == Model.VIEW.ID_INVOLUCRADO ? "selected" : "")>@item.NOMBRECOMPLETO</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label class="control-label">CODIGO</label>
                                                @Html.TextBoxFor(m => m.VIEW.NROREQUERIMIENTO, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-sm-9">
                                            <div class="form-group">
                                                <label class="control-label">Tarea</label>
                                                @Html.TextBoxFor(m => m.VIEW.TAREA, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label class="control-label">Observación</label>
                                                @Html.TextAreaFor(m => m.VIEW.OBSERVACION, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label class=" control-label">Fecha de Asignacion </label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.VIEW.FECHAINIPLAZO, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <label class=" control-label">Fecha Termino</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                    @Html.TextBoxFor(m => m.VIEW.FECHAFINPLAZO, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">

                                        </div>
                                        <div class="col-sm-3">

                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>

                        <div id="Acciones" class="tab-pane">
                            <form id="FrmAcciones">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="control-label">Responsable Acción</label>
                                                <div class="input-group">
                                                    <div hidden>
                                                        <input type="text" id="txtIDResponsableAccion" class="spinner-input form-control" value="@ViewBag.IdUsuarioAdmin" readonly>
                                                    </div>
                                                    <input type="text" id="TxtResponsableAccion" class="spinner-input form-control" value="@ViewBag.UserNameAdmin" readonly>
                                                    <div class="spinner-buttons input-group-btn">
                                                        <button type="button" class="btn btn-default spinner-up">
                                                            <i class="fa fa-user"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class=" control-label">Fecha Inicio Acciones</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                    <input type="text" id="FechaIniAccion" placeholder="__/__/____" data-plugin-datepicker data-plugin-options='{"format": "dd/mm/yyyy"}'
                                                           class="form-control" value="@ViewBag.FechaRegistro" readonly>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div hidden>
                                                <input type="text" id="txtidAccion" class="spinner-input form-control" readonly>
                                            </div>
                                            <div hidden>
                                                <input type="text" id="txtidTareaAccion" class="spinner-input form-control" readonly>
                                            </div>
                                            <div hidden>
                                                <input type="text" id="txtEstadoAccion" class="spinner-input form-control" readonly>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label class="control-label">Descripción</label>
                                                <input type="text" id="TxtDescripAccion" required name="TxtDesAccion" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label class="control-label">Observación</label>
                                                <input type="text" id="TxtObservaAccion" required name="TxtDesAccion" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <br />
                                            <button type="submit" id="Agregar" class="btn btn-primary">
                                                <i class="fa fa-save">Agregar</i>
                                            </button>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="panel-body">
                                            <table class="table table-bordered table-striped mb-none table-hover" id="datatableAccion">
                                                <thead>
                                                    <tr>
                                                        <th>Nro</th>
                                                        <th>Fecha</th>
                                                        <th>Responsable</th>
                                                        <th>Descripción</th>
                                                        <th>Observación</th>
                                                        <th>Estado</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model?.ListaAcciones)
                                                    {
                                                        <tr>
                                                            <td>@item.ID_ACCION</td>
                                                            <td>@item.FECHA</td>
                                                            <td>@item.RESPONSABLE</td>
                                                            <td>@item.DESCRIPCION</td>
                                                            <td>@item.OBSERVACION</td>
                                                            <td class="@item.COLORESTADO ">@item.DESESTADO</td>
                                                            <td style="width:8%">
                                                                <a title="Editar" onclick="EditMaster(@item.ID_ACCION)"><i class="fa fa-pencil"></i></a>
                                                                <a title="Aprobar" onclick="getIDAccion(@item.ID_ACCION)" class="mb-xs mt-xs mr-xs modal-basic" href="#modalAprobar"><i class="fa fa-check"></i></a>
                                                                <a title="Revertir" onclick="getIDAccion(@item.ID_ACCION)" class="mb-xs mt-xs mr-xs modal-basic" href="#modalRevertir"><i class="fa fa-reply-all"></i></a>
                                                                <a title="Anular" onclick="getIDAccion(@item.ID_ACCION)" class="mb-xs mt-xs mr-xs modal-basic" href="#modalAnular"><i class="fa fa-times"></i></a>
                                                                <a title="Ver" href="@Url.Action("Ver","Ticket", new { id=item.ID_ACCION})"><i class="fa  fa-search"></i></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- end: page -->


    <footer class="panel-footer">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label">Usuario Creación</label>
                    @Html.TextBoxFor(m => m.VIEW.USUARIOCREACION, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Fecha Creación</label>
                    @Html.TextBoxFor(m => m.VIEW.FECHACREACION, new { @class = "form-control", @redonly = "readonly", @disabled = "" })

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="control-label">Usuario Modificación</label>
                    @Html.TextBoxFor(m => m.VIEW.USUARIOMODIFICACION, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label>Fecha Modificación</label>
                    @Html.TextBoxFor(m => m.VIEW.FECHAMODIFICACION, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                </div>
            </div>
        </div>
    </footer>

}


