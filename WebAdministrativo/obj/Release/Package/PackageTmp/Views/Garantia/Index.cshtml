@model IEnumerable<VIEW_Garantia>
@{
    ViewBag.Title = "Index";
}

<!-- start: page -->
<section class="panel">
    <div class="row">
        <div class="col-md-12">
            <div class="tabs">
                <ul class="nav nav-tabs">
                    <li id="ClickTarea" class="active">
                        <a href="#popular" data-toggle="tab">

                            Consultar Garantia
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="popular" class="tab-pane active">
                        <div class="panel-body">
                            <div class="row">
                                <ul class="notifications" style="float:right">
                                    <li>
                                        <a href="#" onclick="SendParametrosList()" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Nuevo","Garantia")" class="btn btn-primary">
                                            <i class="fa fa-file-o"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">Solicitante</label>
                                        <div class="input-group">
                                            <div hidden>
                                                <input type="text" id="IDCONTACTO" name="IDCONTACTO" class="spinner-input form-control" readonly value="@ViewBag.IdUsuarioAdmin">
                                            </div>
                                            <input type="text" id="CONTACTO" class="spinner-input form-control" readonly value="@ViewBag.UserNameAdmin">
                                            <span class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">Referencia</label>
                                        <input type="text" id="REFERENCIA" maxlength="30" name="REFERENCIA" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class=" control-label">Desde</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="text" id="FECHAINICIO" name="FECHAINICIO" placeholder="__/__/____" data-plugin-datepicker data-plugin-options='{"format": "dd/mm/yyyy"}'
                                                   class="form-control" value="@ViewBag.FechaInicio">

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class=" control-label">Hasta</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="text" id="FECHAFIN" name="FECHAFIN" placeholder="__/__/____" data-plugin-datepicker data-plugin-options='{"format": "dd/mm/yyyy"}'
                                                   class="form-control" value="@ViewBag.FechaRegistro">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">Estado</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-tasks"></i>
                                            </span>
                                            <select id="ESTADO" name="ESTADO" class="form-control" required>
                                                <option> Seleccione....</option>
                                                @foreach (var item in ViewBag?.ListEstado)
                                                {
                                                    <option value="@item.CODIGO">@item.NOMBRE</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <br />
                            <form id="Frmpopular">
                                <div class="row">
                                    <div class="panel-body">
                                        <table class="table table-hover mb-none" id="datatable-default">
                                            <thead>
                                                <tr class="dark">
                                                    <th>Nro</th>
                                                    <th>Fecha Registro</th>
                                                    <th>Empresa</th>
                                                    <th>Solicitante</th>
                                                    <th>Referencia</th>
                                                    <th>Descripcion</th>
                                                    <th>Estado</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in ViewBag.ListGarantia)
                                                {
                                                    <tr>
                                                        <td>@item.IDGARANTIA</td>
                                                        <td>@item.FECREGISTRO</td>
                                                        <td>@item.EMPRESA</td>
                                                        <td>@item.CONTACTO</td>
                                                        <td>@item.CODIGO</td>
                                                        <td>@item.DESCRIPCION</td>
                                                        <td class="@item.COLORESTADO ">@item.DESESTADO</td>
                                                        <td style="width:10%">
                                                            <a title="Ver" href="@Url.Action("Ver","Garantia", new { id=item.IDGARANTIA})"><i class="fa  fa-search"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end: page -->

<script>

    var dt;

    function SendParametrosList() {

        // Definir la variable dt fuera del ámbito de la función para que sea accesible globalmente
        dt = $("#datatable-default").DataTable({
            destroy: true,
            responsive: true,
            searching: false,
            lengthChange: false,
            language: {
                "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ registros"
            },
            ajax: {
                method: "POST",
                url: "Garantia/Buscar",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: function (d) {
                    d.IDCONTACTO = $('#IDCONTACTO').val();
                    d.FECHAINICIO = $('#FECHAINICIO').val();
                    d.FECHAFIN = $('#FECHAFIN').val();
                    d.REFERENCIA = $('#REFERENCIA').val();
                    d.ESTADO = $('#ESTADO').val();
                    return JSON.stringify(d);
                },
                dataSrc: "data"
            },
            columns: [
                { "data": "IDGARANTIA" },
                { "data": "FECREGISTRO" },
                //{
                //    "data": "FECREGISTRO",
                //    "render": function (data) {
                //        return formatDate(data);
                //    }},
                { "data": "EMPRESA" },
                { "data": "CONTACTO" },
                { "data": "CODIGO" },
                { "data": "DESCRIPCION" },
                { "data": "DESESTADO" },
                {
                    "data": "IDGARANTIA",
                    'orderable': false,
                    'render': function (data, type, full, meta) {
                        var html = '<a title="Ver"  class="mb-xs mt-xs mr-xs modal-basic"  href="/Garantia/Ver/' + data + '"><i class="fa fa-search"></i></a>';
                        return html;
                    }
                }
            ]
        });
    }
      
</script>

