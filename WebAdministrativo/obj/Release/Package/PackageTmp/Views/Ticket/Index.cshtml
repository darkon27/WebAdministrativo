@model IEnumerable<VIEW_Ticket>

@{
    ViewBag.Title = "Index";
}

<input type="hidden" id="IdUsuario" class="spinner-input form-control" readonly value="@ViewBag.IdUsuarioAdmin">

<!-- start: page -->
<section class="panel">
    <div class="row">
        <div class="col-md-12">
            <div class="tabs">
                <ul class="nav nav-tabs">
                    <li id="ClickTarea" class="active">
                        <a href="#popular" data-toggle="tab">
                            Consultar Ticket
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="popular" class="tab-pane active">
                        <div class="panel-body">
                            <div class="row">
                                <ul class="notifications" style="float:right">
                                    <li>
                                        <a href="#" onclick="SendParametrosList()" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Nuevo","Ticket")" class="btn btn-primary">
                                            <i class="fa fa-file-o"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">Solicitante</label>
                                        <div class="input-group">
                                            <div hidden>
                                                <input type="text" id="IDSOLICITANTE" name="IDSOLICITANTE" class="spinner-input form-control" readonly value="@ViewBag.IdUsuarioAdmin">
                                            </div>
                                            <input type="text" id="SOLICITANTE" class="spinner-input form-control" readonly value="@ViewBag.UserNameAdmin">
                                            <span class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class=" control-label">Desde</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="text" id="FECHAINI" name="FECHAINI" placeholder="__/__/____" data-plugin-datepicker data-plugin-options='{"format": "dd/mm/yyyy"}'
                                                   class="form-control" value="@ViewBag.FechaRegistro">

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class=" control-label">Hasta</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            <input type="text" id="FECHAFIN" name="FECHAFIN" placeholder="__/__/____" data-plugin-datepicker data-plugin-options='{"format": "dd/mm/yyyy"}'
                                                   class="form-control" value="@ViewBag.FechaRegistro">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label class="control-label">Incidencia</label>
                                        <input type="text" id="DESCRIPCION" maxlength="30" name="DESCRIPCION" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">Estado</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-tasks"></i>
                                            </span>
                                            <select id="ESTADO" name="ESTADO" class="form-control" required>
                                                <option> Seleccione....</option>
                                                @foreach (var item in ViewBag?.ListEstado)
                                                {
                                                    <option value="@item.CODIGO">@item.NOMBRE</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div id="ContenedorTarea" class="form-group">
                                        <br />
                                    </div>
                                </div>
                            </div>

                            <br />
                            <form id="Frmpopular">
                                <div class="row">
                                    <div class="panel-body">
                                        <table class="table table-hover mb-none" id="datatable-default">
                                            <thead>
                                                <tr class="dark">
                                                    <th>Nro</th>
                                                    <th>Fecha Registro</th>
                                                    <th>Tipo</th>
                                                    <th>Asunto</th>
                                                    <th>Solicitante</th>
                                                    <th>Responsable</th>
                                                    <th>Estado</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.IDTICKET</td>
                                                        <td>@item.FECREGISTRO</td>
                                                        <td>@item.DESTIPOTICKET</td>
                                                        <td>@item.DESCRIPCION</td>
                                                        <td>@item.SOLICITANTE</td>
                                                        <td>@item.RESPONSABLE</td>
                                                        <td class="@item.COLORESTADO ">@item.DESESTADO</td>
                                                        <td style="width:8%;">
                                                            <a title="Ver" href="@Url.Action("Ver","Ticket", new { id=item.IDTICKET})"><i class="fa  fa-search"></i></a>
                                                            @*<a title="Eliminar" onclick="getID(@item.ID_TAREA)" class="mb-xs mt-xs mr-xs modal-basic" href="#modalMD"><i class="fa fa-trash-o"></i></a>*@
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end: page -->

<script>

    var dt;

    function SendParametrosList() {

        // Definir la variable dt fuera del ámbito de la función para que sea accesible globalmente
        dt = $("#datatable-default").DataTable({
            destroy: true,
            responsive: true,
            searching: false,
            lengthChange: false,
            language: {
                "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ registros"
            },
            ajax: {
                method: "POST",
                url: "Ticket/Buscar",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: function (d) {
                    d.IDSOLICITANTE = $('#IDSOLICITANTE').val();
                    d.FECHAINI = $('#FECHAINI').val();
                    d.FECHAFIN = $('#FECHAFIN').val();
                    d.DESCRIPCION = $('#DESCRIPCION').val();
                    d.ESTADO = $('#ESTADO').val();
                    return JSON.stringify(d);
                },
                dataSrc: "data"
            },
            columns: [
                { "data": "IDTICKET" },
                { "data": "FECREGISTRO" },
                //{
                //    "data": "FECREGISTRO",
                //    "render": function (data) {
                //        return formatDate(data);
                //    }},
                { "data": "DESTIPOTICKET" },
                { "data": "DESCRIPCION" },
                { "data": "SOLICITANTE" },
                { "data": "RESPONSABLE" },
                { "data": "DESESTADO" },
                {
                    "data": "IDTICKET",
                    'orderable': false,
                    'render': function (data, type, full, meta) {
                        var html = '<a title="Ver"  class="mb-xs mt-xs mr-xs modal-basic"  href="/Ticket/Ver/' + data + '"><i class="fa fa-search"></i></a>';
                        return html;
                    }
                }
            ]
        });
    }

</script>

