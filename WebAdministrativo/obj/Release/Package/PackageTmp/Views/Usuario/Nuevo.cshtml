@model UsuarioViewModels
@{
    ViewBag.Title = "Nuevo";
}

@using (Html.BeginForm("Guardar", "Usuario", FormMethod.Post))
{
    <h2>
        Nuevo Usuario
        <div class="row">
            <ul class="notifications" style="float:right">
                <li>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                    </button>
                </li>
                <li>
                    <a href="@Url.Action("Index","Usuario")" class="btn btn-primary">
                        <i class="fa fa-mail-reply "></i>
                    </a>
                </li>
            </ul>
        </div>
    </h2>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Solicitante</label>
                    <div class="input-group">
                        <div hidden>
                            <input type="text" id="IDSOLICITANTE" class="spinner-input form-control" readonly value="@ViewBag.IdUsuarioAdmin">
                        </div>
                        <input type="text" id="SOLICITANTE" class="spinner-input form-control" readonly value="@ViewBag.UserNameAdmin">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">NRO Ticket</label>
                    <input type="text" id="FechaRegistro" placeholder="__/__/____" data-plugin-datepicker data-plugin-options='{"format": "dd/mm/yyyy"}'
                           class="form-control" value="@ViewBag.FechaRegistro" disabled="">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Tipo Ticket</label>
                    <select name="Tipo" class="form-control" required>
                        <option> Seleccione....</option>
                        @foreach (var item in ViewBag.ListTipoUsu)
                        {
                            <option value="@item.CODIGO">@item.NOMBRE</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-8">
                <div class="form-group">
                    <label class="control-label">Motivo Ticket</label>

                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Referencia</label>
                    <div class="input-group">

                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="control-label">Observación</label>

                </div>
            </div>
            <div class="col-sm-12">
                <div id="ContenedorBotones" class="form-group">
                    <br />
                </div>
            </div>
        </div>
    </div>
    <footer class="panel-footer">

    </footer>

}




