@model IEnumerable<VIEW_Accesos>
@{
    ViewBag.Title = "Index";
}

<input type="hidden" id="IdUsuario" class="spinner-input form-control" readonly value="@ViewBag.IdUsuarioAdmin">

<!-- start: page -->
<section class="panel">
    @*<a class="my-2 my-sm-0" style="float:right" href="@Url.Action("Nuevo","Ticket")"><i class="fa fa-file-o"></i></a>*@
    <div class="row">
        <div class="col-md-12">
            <div class="tabs">
                <ul class="nav nav-tabs">
                    <li id="ClickTarea" class="active">
                        <a href="#popular" data-toggle="tab">
                            <span class="badge hidden-xs">1</span>
                            Consultar Ticket
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="popular" class="tab-pane active">
                        <form id="Frmpopular">

                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="control-label">Usuario</label>
                                            <input type="text" id="TxtUsuario" maxlength="30" name="TxtUsuario" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="control-label">Tipo Usuario</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-tasks"></i>
                                                </span>
                                                <select name="TIPOUSUARIO" class="form-control" required>
                                                    <option> Seleccione....</option>
                                                    @foreach (var item in ViewBag.ListTipoUsu)
                                                    {
                                                        <option value="@item.CODIGO">@item.NOMBRE</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="control-label">Estado</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-tasks"></i>
                                                </span>
                                                <select name="IdEstado" class="form-control" required>
                                                    <option> Seleccione....</option>
                                                    @foreach (var item in ViewBag.ListEstado)
                                                    {
                                                        <option value="@item.CODIGO">@item.NOMBRE</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="panel-body">

                                        <table class="table table-bordered table-striped table-condensed mb-none">
                                            <thead>
                                                <tr class="dark">
                                                    <th>Nro</th>
                                                    <th>Fecha</th>
                                                    <th>Tipo</th>
                                                    <th>Usuario</th>
                                                    <th>Nombre</th>
                                                    <th>Email</th>
                                                    <th>Fec. Expiración</th>
                                                    <th>Estado</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>@item.IDPERSONA</td>
                                                    <td>@item.FECHACREACION</td>
                                                    <td>@item.DESTIPOUSUARIO</td>
                                                    <td>@item.USUARIO</td>
                                                    <td>@item.NOMBRECOMPLETO</td>
                                                    <td>@item.EMAIL</td>
                                                    <td>@item.FECHAEXPIRACION</td>
                                                    <td class="@item.COLORESTADO ">@item.DESESTADO</td>
                                                    <td style="width:10%">
                                                        <a title="Modificar" href="@Url.Action("Modificar","Usuario", new { id=item.IDUSUARIO})"><i class="fa fa-pencil"></i></a>
                                                        <a title="Anular" onclick="getID(@item.IDUSUARIO)" class="mb-xs mt-xs mr-xs modal-basic" href="#modalAnular"><i class="fa fa-times"></i></a>
                                                        <a title="Ver" href="@Url.Action("Ver","Usuario", new { id=item.IDUSUARIO})"><i class="fa  fa-search"></i></a>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end: page -->
@*<a title="Eliminar" class="mb-xs mt-xs mr-xs modal-basic" href="#modalBasic"><i class="fa fa-trash-o"></i></a>*@

<div id="modalAnular" class="modal-block modal-block-md mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Confirmación</h2>
        </header>
        <div class="panel-body">
            <div class="modal-wrapper">
                <div class="modal-text">
                    <p>Esta seguro de eliminar el Usuario?</p>
                </div>
            </div>
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary modal-confirm" onclick="AnularUsu()">Si Estoy seguro</button>
                    <button class="btn btn-default modal-dismiss">Cancel</button>
                </div>
            </div>
        </footer>
    </section>
</div>

<input type="hidden" value="" id="IDUSUARIO" />
<script>

    function getID(id) {
        $("#IDUSUARIO").val(id);
    }

    function AnularUsu(id) {
        let url= '@Url.Action("Anular", "Usuario")'
        url = url + '/' + $("#IDUSUARIO").val();
        window.location.href = url;
    }

</script>

