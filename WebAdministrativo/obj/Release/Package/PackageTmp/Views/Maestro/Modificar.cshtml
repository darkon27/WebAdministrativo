
@model MaestroDetalleViewModels
@{
    ViewBag.Title = "Modificar";
}

<div class="panel-body">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@TempData["MessageType"]">
            @TempData["Message"]
        </div>
    }
    @using (Html.BeginForm("Actualizar", "Maestro", FormMethod.Post))
    {
        <h2>
            Modificar Maestro
        </h2>
        <div class="row">
            <ul class="notifications" style="float:right">
                <li>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                    </button>
                </li>
                <li>
                    <a href="@Url.Action("Index","Maestro")" class="btn btn-primary">
                        <i class="fa fa-mail-reply "></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">ID</label>
                    @Html.TextBoxFor(m => m.VIEW.ID, new { @class = "form-control", @redonly = "readonly", @disabled = "" })
                    @Html.HiddenFor(m => m.VIEW.ID, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Tipo Maestro</label>
                    <select name="VIEW.IDMAESTRO" class="form-control" required>
                        <option> Seleccione....</option>
                        @foreach (var item in Model?.ListTipo)
                        {
                            <option value="@item.IDMAESTRO" @(item.IDMAESTRO == Model?.VIEW.IDMAESTRO ? "selected" : "")>@item.NOMBRE</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Codigo</label>
                    @Html.TextBoxFor(m => m.VIEW.CODIGO, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    @Html.TextBoxFor(m => m.VIEW.NOMBRE, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="form-group">
                    <label class="control-label">Descripcion</label>
                    @Html.TextAreaFor(m => m.VIEW.DESCRIPCION, new { @class = "form-control", @required = "required", @redonly = "readonly" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    <select name="VIEW.ESTADO" class="form-control" required>
                        <option> Seleccione....</option>
                        @foreach (var item in Model?.ListEstado)
                        {
                            <option value="@item.CODIGO" @(item.CODIGO == Model?.VIEW.ESTADO.ToString() ? "selected" : "")>@item.NOMBRE</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    }
 </div>






